@model lab3Original.Models.Output

@{
	ViewBag.Title = "Премії";
	Layout = "_Layout";
}
<div style="display: flex; justify-content: center">
	<div style="width:60%">
		<table class="table table-striped">
			<thead>
				<tr style="text-align: center">
					<th>Код працівника</th>
					<th>Прізвище</th>
					<th>Стать</th>
					<th>Номер цеху</th>
					<th>Посада</th>
					<th>Стаж</th>
					<th>Оклад</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.outputFactories!)
				{
					<tr style="text-align: center">
						<td>
							@item.Id
						</td>
						<td>
							@item.Surname
						</td>
						<td>
							@(item.IsMale ? "Чоловік" : "Жінка")
						</td>
						<td>
							@item.DepartmentNumber
						</td>
						<td>
							@item.Post
						</td>
						<td>
							@item.Experience
						</td>
						<td>
							@item.Salary
						</td>
						<td />
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>